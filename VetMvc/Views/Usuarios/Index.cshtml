@model IEnumerable<VetMvc.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<div class="d-flex gap-2 mb-3">
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Nuevo Usuario</a>
    <a asp-action="ExportExcel" class="btn btn-outline-primary"><i class="bi bi-file-earmark-excel"></i> Excel</a>
    <a asp-action="ExportPdf" class="btn btn-outline-danger"><i class="bi bi-file-earmark-pdf"></i> PDF</a>
</div>

@await Html.PartialAsync("_Alerts")

<div class="card shadow-sm">
    <div class="card-header bg-white fw-semibold">
        Listado
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Activo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.NombreCompleto</td>
                            <td>@u.NombreUsuario</td>
                            <td>@u.Email</td>
                            <td>@u.Rol</td>
                            <td>@(u.Activo ? "Sí" : "No")</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@u.Id" class="btn btn-sm btn-secondary">Ver</a>
                                <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Editar</a>
                                <form asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('¿Eliminar usuario @u.NombreUsuario?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
