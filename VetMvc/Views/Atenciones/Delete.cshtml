@model VetMvc.Models.Atencione
@{
    ViewData["Title"] = "Eliminar Atención";
}
<h1>Eliminar Atención</h1>

<div class="alert alert-warning mb-3">
    ¿Seguro que deseas eliminar esta atención? Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-header">Información</div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Fecha</dt>
            <dd class="col-sm-9">@Model.FechaHora</dd>
            <dt class="col-sm-3">Mascota</dt>
            <dd class="col-sm-9">@Model.Mascota?.Nombre</dd>
            <dt class="col-sm-3">Dueño</dt>
            <dd class="col-sm-9">@Model.Mascota?.Dueno?.Nombres @Model.Mascota?.Dueno?.Apellidos</dd>
            <dt class="col-sm-3">Motivo</dt>
            <dd class="col-sm-9">@Model.Motivo</dd>
            <dt class="col-sm-3">Costo</dt>
            <dd class="col-sm-9">@Model.Costo</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
